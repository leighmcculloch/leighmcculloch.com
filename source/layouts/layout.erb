<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <link rel="canonical" href="http://leighmcculloch.com" />

    <title><%= current_page.data.title %></title>

    <meta name="description" content="<%= current_page.data.description %>"/>

    <meta name="viewport" content="width=520px">

    <meta property="og:type" content="article" />
    <meta property="og:title" content="<%= current_page.data.share_title %>" />
    <meta property="og:description" content="<%= current_page.data.description %>" />
    <meta property="og:url" content="http://leighmcculloch.com" />
    <meta property="og:site_name" content="Leigh McCulloch" />
    <meta property="og:image" content="<%= current_page.data.share_image %>" />

    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:site" content="@___leigh___"/>
    <meta name="twitter:domain" content="Leigh McCulloch"/>
    <meta name="twitter:creator" content="@___leigh___"/>

    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <script type="text/javascript" src="http://use.typekit.net/ipr5nva.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "style" %>
    <%= yield_content :js %>
  </head>

  <body class="page <%= page_classes %>">
    <%= yield %>
  </body>
</html>
